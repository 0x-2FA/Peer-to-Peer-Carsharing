@page "/signup/confirm"
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="text-center mt-3">
    @{
        if (@Model.DisplayConfirmAccountLink)
        {
            <p class="d-inline-block">Thank you for creating an account on our site. To finish your registration and have the best experience from our service we've sent you an email. <br />Please check your email to confirm your account.</p>
        }
    }
</div>


