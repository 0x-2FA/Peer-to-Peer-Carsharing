@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    <h2>Enter your email.</h2>
    <hr />
    <div class="d-flex justify-content-center justify-content-evenly margin-top-5">

        <div class="d-none d-lg-block flex-grow-1">
            <img src="/img/Sitting-On-Floor.png" alt="guy with orange hat driving a blue car with his window open" />
        </div>

         <form class="m-5 m-lg-0 flex-fill" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3 mb-lg-4">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </form>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
