@page "/signup/confirm"
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container row justify-content-center">
    @{
        if (@Model.DisplayConfirmAccountLink)
        {
            <p class="col-6 mt-3">
                Thank you for creating an account on our site. To finish your registration and have the best experience from our service we've sent you an email. Please check your email to confirm your account.
            </p>
        }
    }
</div>


