@model carsharing.Models.Post
@{
     ViewData["Title"] = "Post";
}

@if (Model != null)
{
        <section class="container">
            <div class="row justify-content-between">
                @*Left part of page*@
                <div class="col-lg-6 text-blue">
                    <h2 class="mt-4 blue-text">This is a post!</h2>
                    <div class="mb-4 mt-3">
                        <div class="text-center">
                            <img src="@Url.Content(Model.ThumbnailUrl)" alt="avatar" style="height:550px;width:650px;" />
                        </div>

                    </div>

                    <h5 class="col-md-4 mt-3 control-label">Description:</h5>
                    <div class=" mb-4">
                        <p class="text-muted mb-1">@Model.Body</p>
                    </div>

                </div>

                @*Right part of page*@
                <div class="col-lg-6 mt-5">
                    <div class="container">
                        <h5 class="col-md-4 control-label">Title:</h5>  
                        <div class="col-md-6  mb-4">
                            <h6 class="col-md-4 ">@Model.Title</h6>
                        </div>
                        <h5 class="col-md-4 control-label">City:</h5>  
                        <div class="col-md-6 mb-4">
                            <h6 class="col-md-4 ">@Model.City</h6>
                        </div>
                        <h5 class="col-md-4 control-label">Rating:</h5>  
                        <div class="col-md-6 mb-4">
                            <h6 class="col-md-4 ">@Model.Rating</h6>
                        </div>
                        <h5 class="col-md-4 control-label">Post created at:</h5>  
                        <div class="col-md-6  mb-4">
                            <h6 class="col-md-4 ">@Model.Created</h6>
                        </div>
                        <h5 class="col-md-4 control-label">Cost per day:</h5>  
                        <div class="col-md-6  mb-4">
                            <h6 class="col-md-4 ">@Model.CostPerDay</h6>
                        </div>
                        <h5 class="col-md-4 control-label">Max days of rent:</h5>
                        <div class="col-md-6  mb-4">
                            <h6 class="col-md-4 ">@Model.MaxDaysOfRent</h6>
                        </div><br><br><br>
                        @*button*@
                        <div class="col-md-4">
                            <button type="button" class="btn-create btn-outline-dark mt-3 mb-2" data-mdb-ripple-color="dark">
                                <h4 class="mt-1">Rent this car</h4>
                            </button>

                        </div>
                    </div>


                </div>


            </div>

            @* Comment section *@
            <div>
                <h2 class="mb-3">Comment Section</h2>
                @if(Model.PostComments.Any())
                {
                    @foreach(var comment in Model.PostComments.ToList())
                    {
                        <div class="card card-size mb-3" style="max-width: 800px;">
                            <div class="row no-gutters">
                                <div class="col-md-4">
                                    <img src="@*@comment.Renter.ProfilePicture*@" class="result-card-images" alt="renter profile picture">
                                </div>
                                    <div class="col-md-6">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">
                                                <h5 class="card-title">@comment.Rating/5</h5>
                                            </div>
                                            <p class="card-text">@comment.Body</p>
                                            <p class="card-text"><small class="text-muted">@comment.Renter.FirstName @comment.Renter.LastName</small></p>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <span><small class="text-muted">@comment.Created</small></span>
                                    </div>
@*                                <div class="col-md-2 border-left-price">
                                    <div class="border-sm-top-price py-3 py-md-0">
                                        <div>
                                            <span class="">
                                                Total price
                                            </span>
                                            <span>
                                                Nothing
                                            </span>
                                        </div>
                                        <button class="mt-2">View more</button>
                                    </div>
                                </div>*@
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div>
                        There are no comments on this post  
                    </div>
                }
            </div>
        </section>
}