@model carsharing.Models.Post
@{
     ViewData["Title"] = "Post";
}

@if (Model != null)
{
        <section class="container">
            <div class="row justify-content-between">
                @*Left part of page*@
                <div class="col-lg-6 text-blue">
                    <h2 class="mt-4 blue-text">This is a post!</h2>
                    <div class="card mb-4 mt-3">
                        <div class="card-body text-center">
                            <img src="@Url.Content(Model.ThumbnailUrl)" alt="avatar" style="height:300px;width:550px;" />
                        </div>

                    </div>

                    <h5 class="col-md-4 mt-3 control-label">Description:</h5>
                    <div class=" mb-4">
                        <p class="text-muted mb-1">@Model.Body</p>
                    </div>

                </div>

                @*Right part of page*@
                <div class="col-lg-6 mt-5">
                    <div class="container">
                        <h5 class="col-md-4 control-label">Title:</h5>  
                        <div class="col-md-6  mb-4">
                            <h6 class="col-md-4 ">@Model.Title</h6>
                        </div>
                        <h5 class="col-md-4 control-label">City:</h5>  
                        <div class="col-md-6 mb-4">
                            <h6 class="col-md-4 ">@Model.City</h6>
                        </div>
                        <h5 class="col-md-4 control-label">Rating:</h5>  
                        <div class="col-md-6 mb-4">
                            <h6 class="col-md-4 ">@Model.Rating</h6>
                        </div>
                        <h5 class="col-md-4 control-label">Post created at:</h5>  
                        <div class="col-md-6  mb-4">
                            <h6 class="col-md-4 ">@Model.Created</h6>
                        </div>
                        <h5 class="col-md-4 control-label">Cost per day:</h5>  
                        <div class="col-md-6  mb-4">
                            <h6 class="col-md-4 ">@Model.CostPerDay</h6>
                        </div>
                        <h5 class="col-md-4 control-label">Max days of rent:</h5>
                        <div class="col-md-6  mb-4">
                            <h6 class="col-md-4 ">@Model.MaxDaysOfRent</h6>
                        </div>
                        @*button*@
                        <div class="col-md-4">
                            <button type="button" class="btn-create btn-outline-dark mt-3 mb-2" data-mdb-ripple-color="dark">
                                <h4 class="mt-1">Rent this car</h4>
                            </button>

                        </div>
                    </div>


                </div>


            </div>
        </section>
}