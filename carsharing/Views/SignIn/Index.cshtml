@model carsharing.Models.SignIn
@{
    ViewData["Title"] = "Sign In";
}


@* Sign in forms *@
<section class="container">
    <div class="d-flex justify-content-center justify-content-evenly margin-top-5">
        <div class="d-none d-lg-block flex-grow-1">
            <img src="/img/sign-in-image.png" alt="guy with orange hat driving a blue car with his window open" />
        </div>
        <form class="m-5 m-lg-0 flex-fill" asp-action="SignIn" asp-controller="SignIn" method="post">
            <div class="d-flex align-items-center">
                <h4>Sign In</h4>
            </div>
            <div class="mb-3 margin-top-1-5">
                <label class="form-label" asp-for="Email">Email</label>
                <input type="email" class="form-control" aria-describedby="emailHelp" asp-for="Email">
                <div class="error-message">
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Password">Password</label>
                <input type="password" class="form-control" asp-for="Password" id="pass">
                <div class="error-message">
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <div class="mb-3 form-check ">
                    <input type="checkbox" class="form-check-input" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">Remember me</label><br>
                    <input type="checkbox" class="form-check-input" onclick="showPassword()" id="showPass">
                    <label class="form-check-label" for="showPass">Show Password</label>
                </div>
                
            </div>
            <button type="submit" class="btn btn-p">Sign in</button>
        </form>
    </div>
</section>

<script>
function showPassword() {
  var x = document.getElementById("pass");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>
